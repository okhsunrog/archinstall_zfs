#!/usr/bin/env bash
# shellcheck disable=SC2034

iso_name="archzfs-{{ kernel }}-{{ 'dkms' if use_dkms else 'pre' }}{{ '-testing' if fast_build else '' }}"
iso_label="ARCHZFS_$(date --date="@${SOURCE_DATE_EPOCH:-$(date +%s)}" +%Y%m)"
iso_publisher="ArchZFS Project <https://github.com/okhsunrog/archinstall_zfs>"
iso_application="Arch Linux with ZFS Live/Installation DVD"
iso_version="$(date --date="@${SOURCE_DATE_EPOCH:-$(date +%s)}" +%Y.%m.%d)"
install_dir="arch"
buildmodes=('iso')
{% if fast_build %}
# Testing: reduced bootmodes to speed up build and reduce size
bootmodes=(
           'bios.syslinux.eltorito'
           'uefi-x64.systemd-boot.eltorito'
          )
{% else %}
bootmodes=(
           'bios.syslinux.mbr' 'bios.syslinux.eltorito'
           'uefi-ia32.systemd-boot.esp' 'uefi-x64.systemd-boot.esp'
           'uefi-ia32.systemd-boot.eltorito' 'uefi-x64.systemd-boot.eltorito'
          )
{% endif %}
arch="x86_64"
pacman_conf="pacman.conf"
airootfs_image_type="{{ 'erofs' if fast_build else 'squashfs' }}"
{% if fast_build %}
airootfs_image_tool_options=('-zlz4')
bootstrap_tarball_compression=('cat')
{% else %}
airootfs_image_tool_options=('-comp' 'xz' '-Xbcj' 'x86' '-b' '1M' '-Xdict-size' '1M')
bootstrap_tarball_compression=('zstd' '-c' '-T0' '--auto-threads=logical' '--long' '-19')
{% endif %}
file_permissions=(
  ["/etc/shadow"]="0:0:400"
  ["/root"]="0:0:750"
  ["/root/.automated_script.sh"]="0:0:755"
  ["/root/.gnupg"]="0:0:700"
  ["/root/installer"]="0:0:755"
  ["/usr/local/bin/choose-mirror"]="0:0:755"
  ["/usr/local/bin/Installation_guide"]="0:0:755"
  ["/usr/local/bin/livecd-sound"]="0:0:755"
{% if fast_build %}
  ["/etc/systemd/system/serial-getty@ttyS0.service.d/autologin.conf"]="0:0:644"
{% endif %}
)


